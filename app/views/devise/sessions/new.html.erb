<div class="w-full h-100">
  <h1 class="text-2xl font-bold leading-tight mt-12">Log in to your account</h1>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "mt-6") do |f| %>
    <div>
      <%= f.label :email, class: "block text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-3 rounded-lg bg-gray-200 mt-2 border focus:border-blue-500 focus:bg-white focus:outline-none" %>
    </div>

    <div class="mt-4">
      <%= f.label :password, class: "block text-gray-700" %>
      <%= f.password_field :password, autocomplete: "current-password", class:"w-full px-4 py-3 rounded-lg bg-gray-200 mt-2 border focus:border-blue-500 focus:bg-white focus:outline-none" %>
    </div>

    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <div class="text-right mt-2">
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-sm font-semibold text-gray-700 hover:text-blue-700 focus:text-blue-700" %>
      </div>
    <% end %>

    <% if devise_mapping.rememberable? %>
      <div class="mt-4">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    <%= f.submit "Log in", class: "w-full hover:bg-gray-400 font-semibold focus:bg-gray-400 opacity-100 text-white rounded-lg px-6 py-3 mt-6" %>
  <% end %>

  <hr class="my-6 border-gray-500 w-full">

  <%- if devise_mapping.registerable? %>
    <p class="mt-8">Need an account?
      <%= link_to "Create an account", new_registration_path(resource_name), class: "text-blue-500 hover:text-blue-700 font-semibold" %>
    </p>
  <% end %>
</div>